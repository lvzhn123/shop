   <select id="queryCartsByUserId" resultMap="queryForListMap" parameterType="java.lang.Integer" >  
        SELECT  
          s.id,  
          s.userId,  
          s.nums,
          s.amount,   
          d.id d_id,  
          d.nums d_id,  
          d.price d_price,  
          d.amount d_amount,  
          d.goodsId d_goodsid,
          g.goodsid g_goodsid,
          g.goodsname g_goodsname,
          g.stdPtrice g_stdPtrice,
          g.marketPrice g_marketPrice,
          g.pictureUrl g_pictureUrl
        FROM  
          shopCart s 
        LEFT JOIN  
          shopCartDetail d 
        ON  
          s.id = d.sid
        LEFT JOIN
          goods g
        ON 
          d.goodsId = g.goodsid
        where 
          s.userid = #{userid,jdbcType=INTEGER}
    </select>   
  <sql id="Base_Column_List" >
